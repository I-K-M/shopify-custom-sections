{%- liquid
    assign show_selectors = false
    assign currency_selector = false
    assign locale_selector = false
  
    if section.settings.show_currency_selector and shop.enabled_currencies.size > 1
      assign currency_selector = true
    endif
  
    if section.settings.show_locale_selector and shop.enabled_locales.size > 1
      assign locale_selector = true
    endif
  
    if currency_selector or locale_selector
      assign show_selectors = true
    endif
  -%}
  
  {%- if settings.color_footer == settings.color_body_bg -%}
    {%- style -%}
      .site-footer {
        border-top: 1px solid {{ settings.color_borders }};
      }
    {%- endstyle -%}
  {%- endif -%}
  
  {%- comment -%} TOP GREEN INFO BAR {%- endcomment -%}
  {%- if section.settings.show_footer_info_bar -%}
    <div class="footer-info-bar" data-section-id="{{ section.id }}-info-bar">
      <div class="width-1200">
        <div class="footer-info-bar__inner">
          {%- for block in section.blocks -%}
            {%- if block.type == 'info_bar_item' -%}
              <div class="footer-info-bar__item" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <div class="footer-info-bar__icon">
                    <img
                      src="{{ block.settings.icon | image_url: width: 64 }}"
                      alt="{{ block.settings.icon.alt | escape }}"
                      loading="lazy"
                      width="32"
                      height="32"
                    >
                  </div>
                {%- endif -%}
  
                <div class="footer-info-bar__content">
                  {%- if block.settings.text != blank -%}
                    <div class="footer-info-bar__text rte">
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  
    <style>
      .width-1200 {
        max-width:1100px;
        margin: 0 auto;
      }
      .footer-info-bar{
        padding: {{ section.settings.info_bar_outer_padding }}px 0;
        margin-bottom: -2.5rem;
        z-index: 3;
        position: relative;
        padding-top: 2rem;
      }
      .footer-info-bar__inner{
        background: {{ section.settings.info_bar_bg }};
        color: {{ section.settings.info_bar_text }};
        padding: {{ section.settings.info_bar_padding_y }}px {{ section.settings.info_bar_padding_x }}px;
        display: flex;
        align-items: center;
        gap: {{ section.settings.info_bar_gap }}px;
        justify-content: center;
        flex-wrap: wrap;
      }
      .footer-info-bar__item{
        display: flex;
        align-items: center;
        gap: 14px;
        min-width: 220px;
        flex: 1 1 260px;
        justify-content: center;
      }
      .footer-info-bar__icon{
        width: 34px;
        height: 34px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex: 0 0 34px;
      }
      .footer-info-bar__icon img{
        display:block;
        width: 34px;
        height: 34px;
        object-fit: contain;
      }
      .footer-info-bar__text{
        font-size: 16px;
        line-height: 1.25;
        text-align: left;
      }
      .footer-info-bar__text p{ margin: 0; }
      .footer-info-bar__text p + p{ margin-top: 4px; opacity: .9; }
  
      @media (max-width: 768px){
        .footer-info-bar__inner{
          padding: {{ section.settings.info_bar_padding_y | minus: 2 }}px {{ section.settings.info_bar_padding_x | minus: 4 }}px;
        }
        .footer-info-bar__item{
          justify-content: flex-start;
        }
      }
      @media (min-width:769px) {
        .footer-info-bar__inner {
          border-radius: {{ section.settings.info_bar_radius }}px;
        }
      }
    </style>
  {%- endif -%}
  
  <footer class="site-footer" data-section-id="{{ section.id }}" data-section-type="footer-section">
    <div class="page-width">
  
      <div class="grid">
    {%- assign row_width = 0 -%}
  
    {%- for block in section.blocks -%}
      {%- if block.type == 'info_bar_item' -%}
        {%- continue -%}
      {%- endif -%}
  
      {%- assign row_width = row_width | plus: block.settings.container_width -%}
      {%- if row_width > 100 -%}
        <div class="footer__clear small--hide"></div>
        {%- assign row_width = row_width | minus: 100 -%}
      {%- endif -%}
  
      <div {{ block.shopify_attributes }} class="grid__item footer__item--{{ block.id }}" data-type="{{ block.type }}">
        {%- style -%}
          @media only screen and (min-width: 769px) and (max-width: 959px) {
            .footer__item--{{ block.id }} {
              width: 50%;
              padding-top: 40px;
            }
            .footer__item--{{ block.id }}:nth-child(2n + 1) {
              clear: left;
            }
          }
          @media only screen and (min-width: 960px) {
            .footer__item--{{ block.id }} {
              width: {{ block.settings.container_width }}%;
            }
          }
        {%- endstyle -%}
  
        {%- liquid
          case block.type
            when 'logo_social'
              render 'footer-logo', block: block
            when 'custom'
              render 'footer-custom-text', block: block, container_width: block.settings.container_width
            when 'newsletter'
              render 'footer-newsletter', block: block
            when 'menu'
              render 'footer-menu', block: block
            when 'follow_shop_cta'
              render 'follow-shop-cta', block: block
          endcase
        -%}
      </div>
    {%- endfor -%}
  </div>
      {%- if show_selectors -%}
        <div class="footer__section">
          {%- render 'multi-selectors',
            locale_selector: locale_selector,
            currency_selector: currency_selector,
            show_currency_flags: section.settings.show_currency_flags
            location: 'footer'
          -%}
        </div>
      {%- endif -%}
  
      {%- if section.settings.show_payment_icons -%}
        {%- unless shop.enabled_payment_types == empty -%}
          <ul class="inline-list payment-icons footer__section">
            {%- for type in shop.enabled_payment_types -%}
              <li class="icon--payment">
                {{ type | payment_type_svg_tag }}
              </li>
            {%- endfor -%}
          </ul>
        {%- endunless -%}
      {%- endif -%}
  
      {%- if section.settings.show_copyright -%}
        <p class="footer__small-text">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}
          {%- if section.settings.copyright_text != blank -%}
            {{ section.settings.copyright_text }}
          {%- endif -%}
        </p>
      {%- endif -%}
      <p class="footer__small-text">{{ powered_by_link }}</p>
  
    </div>
  </footer>
  
