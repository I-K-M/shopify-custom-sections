{%- assign per_row = section.settings.per_row -%}
{%- assign product_limit = per_row | times: section.settings.rows -%}
{%- assign fallback_collection = collections[section.settings.home_featured_products] -%}

{%- assign active_handle = request.params.fc | default: fallback_collection.handle -%}
{%- assign collection = collections[active_handle] -%}

{%- if collection == blank -%}
  {%- assign collection = fallback_collection -%}
{%- endif -%}

{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

<div
  id="CollectionSection-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="collection-grid"
  data-context="featured-collection">
  {%- if section.settings.title != blank or section.settings.view_all -%}
    <div class="page-width">
      <div class="section-header{% if section.settings.view_all %}{% unless settings.type_headers_align_text %} section-header--with-link{% endunless %}{% endif %}">
        {% if section.settings.pretitle != blank %}
            <div class="section-header__pretitle">
            {% if section.settings.pretitle_icon != blank %}
                <img
                class="section-header__pretitle-icon"
                src="{{ section.settings.pretitle_icon | image_url: width: 48 }}"
                alt=""
                loading="lazy"
                width="30px"
                height="30px">
            {% endif %}
            <span>{{ section.settings.pretitle }}</span>
            </div>
        {% endif %}

        <h2 class="section-header__title">
            {{ section.settings.title }}
        </h2>

        <p class="subtitle">{{ section.settings.subtitle }}</p>
        
        </div>

        {%- if section.settings.view_all and section.settings.rows == 1 -%}
          <a href="{{ collection.url }}" class="btn btn--secondary btn--small section-header__link">{{ 'collections.general.all_of_collection' | t }}</a>
        {%- endif -%}
      </div>
    </div>
  {%- endif -%}

    <div class="page-width{% if section.settings.mobile_scrollable %} page-width--flush-small{% endif %}">
        <div class="fc-layout">

            <aside class="fc-filters">
                {%- if section.settings.filters_heading != blank or section.settings.collections_list != blank -%}
                    <div class="fc-filter-block fc-filter-block--menu">
                        <h3 class="fc-filters__title">{{ section.settings.filters_heading | default: 'Shop' }}</h3>

                        {%- if section.settings.collections_list != blank -%}
                            <ul class="fc-filter-menu">
                            {%- for c in section.settings.collections_list -%}
                                {%- assign is_active = false -%}
                                {%- if c.handle == collection.handle -%}{%- assign is_active = true -%}{%- endif -%}

                                <li>
                                <a href="{{ request.path }}?fc={{ c.handle }}"
                                    class="{% if is_active %}is-active{% endif %}">
                                    {{ c.title }}
                                </a>
                                </li>
                            {%- endfor -%}
                            </ul>
                        {%- endif -%}
                        </div>
                    {%- endif -%}

                {%- if section.settings.specials_link != blank and section.settings.specials_label != blank -%}
                    <a class="btn fc-specials" href="{{ section.settings.specials_link }}">
                        {{ section.settings.specials_label }}
                    </a>
                {%- endif -%}

                {%- if section.settings.show_price_slider -%}
                    <div class="fc-filter-block">
                        <div class="fc-filter-label">Filter by price</div>

                        <div class="fc-price-slider"
                            data-collection-url="{{ collection.url }}"
                            data-min="{{ section.settings.price_min }}"
                            data-max="{{ section.settings.price_max }}">
                        <input class="fc-range fc-range--min" type="range" step="0.01">
                        <input class="fc-range fc-range--max" type="range" step="0.01">

                        <div class="fc-price-row">
                            <span class="fc-price-value">Price: $<span class="fc-price-out-min"></span> â€“ $<span class="fc-price-out-max"></span></span>
                            <button class="btn btn--small fc-price-apply" type="button">Filter</button>
                        </div>
                        </div>
                    </div>
                {%- endif -%}

                {%- assign s1 = section.settings.suggestion_1 -%}
                {%- assign s2 = section.settings.suggestion_2 -%}

                {%- if s1 != blank or s2 != blank -%}
                <div class="fc-filter-block">
                    <div class="fc-filter-label">Top rated products</div>

                    {%- if s1 != blank -%}
                    <a class="fc-suggestion" href="{{ s1.url }}">
                        <div class="fc-suggestion__img">
                        {%- if s1.featured_image != blank -%}
                            {{ s1.featured_image | image_url: width: 120 | image_tag: loading: 'lazy', alt: s1.title }}
                        {%- endif -%}
                        </div>
                        <div class="fc-suggestion__meta">
                        <div class="fc-suggestion__title">{{ s1.title }}</div>
                        <div class="fc-suggestion__price">{{ s1.price | money }}</div>
                        </div>
                    </a>
                    {%- endif -%}

                    {%- if s2 != blank -%}
                    <a class="fc-suggestion" href="{{ s2.url }}">
                        <div class="fc-suggestion__img">
                        {%- if s2.featured_image != blank -%}
                            {{ s2.featured_image | image_url: width: 120 | image_tag: loading: 'lazy', alt: s2.title }}
                        {%- endif -%}
                        </div>
                        <div class="fc-suggestion__meta">
                        <div class="fc-suggestion__title">{{ s2.title }}</div>
                        <div class="fc-suggestion__price">{{ s2.price | money }}</div>
                        </div>
                    </a>
                    {%- endif -%}

                </div>
                {%- endif -%}

            </aside>

            <div class="fc-carousel">
                <div {% if section.settings.mobile_scrollable %} class="grid-overflow-wrapper"{% endif %}>
                    <div class="grid grid--uniform"{% if section.settings.mobile_scrollable %} data-aos="overflow__animation"{% endif %}>

                        {%- liquid
                            capture gridView
                            render 'products_per_row', products_per_row: per_row, style: 'fractions'
                            endcapture

                            if section.settings.mobile_scrollable
                            assign fallback = '39vw'
                            else
                            assign fallback = 'variable'
                            endif
                        -%}

                        {%- if collection == blank or collection.products_count == 0 -%}
                            {%- unless emptyState -%}
                                {%- assign emptyState = true -%}
                            {%- endunless -%}

                            <div class="grid__item">
                                <div class="grid grid--uniform">
                                {%- for i in (1..product_limit) -%}
                                    <div class="grid__item grid-product {{ gridView }}" data-aos="row-of-{{ per_row }}">
                                    <div class="grid-product__content">
                                        <a href="{{ collection.url }}" class="grid-product__link">
                                        <div class="grid-product__image-mask">
                                            {%- capture current -%}{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                                            <div class="image-wrap">{{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}</div>
                                        </div>
                                        <div class="grid-product__meta">
                                            <div class="grid-product__title">{{ 'home_page.onboarding.product_title' | t }}</div>
                                            <div class="grid-product__price">$29</div>
                                        </div>
                                        </a>
                                    </div>
                                    </div>
                                {%- endfor -%}
                                </div>
                            </div>

                            {%- else -%}

                            {%- for product in collection.products limit: product_limit -%}
                                {%- render 'product-grid-item',
                                product: product,
                                collection: collection,
                                per_row: per_row,
                                quick_shop_enable: settings.quick_shop_enable,
                                fallback: fallback,
                                -%}
                            {%- endfor -%}

                            {%- if section.settings.view_all -%}

                                {%- if section.settings.rows > 1 -%}
                                <div class="grid__item text-center{% if section.settings.mobile_scrollable %} small--hide{% endif %}">
                                    <a href="{{ collection.url }}" class="btn">{{ 'collections.general.all_of_collection' | t }}</a>
                                </div>
                                {%- endif -%}

                                {%- if section.settings.mobile_scrollable -%}
                                <div class="grid__item grid__item--view-all text-center {{ gridView }} medium-up--hide">
                                    <a href="{{ collection.url }}" class="grid-product__see-all">
                                    {{ 'collections.general.view_all_products_html' | t: count: collection.products_count }}
                                    </a>
                                </div>
                                {%- endif -%}

                            {%- endif -%}

                        {%- endif -%}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{%- if section.settings.divider -%}</div>{%- endif -%}

<script>
document.addEventListener('DOMContentLoaded', function () {
  var root = document.querySelector('#shopify-section-template--20259326460042__custom_featured_collection_eH7HRm');
  if (!root) return;

  var slider = root.querySelector('.fc-price-slider');
  if (!slider) return;

  var baseUrl = slider.getAttribute('data-collection-url');
  var min = parseFloat(slider.getAttribute('data-min') || '0');
  var max = parseFloat(slider.getAttribute('data-max') || '0');

  var rMin = slider.querySelector('.fc-range--min');
  var rMax = slider.querySelector('.fc-range--max');
  var outMin = slider.querySelector('.fc-price-out-min');
  var outMax = slider.querySelector('.fc-price-out-max');
  var btn = slider.querySelector('.fc-price-apply');

  if (!rMin || !rMax || !outMin || !outMax || !btn) return;

  // init inputs
  rMin.min = min;
  rMin.max = max;
  rMin.step = 0.01;
  rMin.value = min;

  rMax.min = min;
  rMax.max = max;
  rMax.step = 0.01;
  rMax.value = max;

  function sync() {
    var vMin = parseFloat(rMin.value);
    var vMax = parseFloat(rMax.value);

    if (isNaN(vMin)) vMin = min;
    if (isNaN(vMax)) vMax = max;

    // prevent crossing
    if (vMin > vMax) {
      var tmp = vMin;
      vMin = vMax;
      vMax = tmp;
      rMin.value = vMin;
      rMax.value = vMax;
    }

    outMin.textContent = vMin.toFixed(2);
    outMax.textContent = vMax.toFixed(2);
  }

  rMin.addEventListener('input', sync);
  rMax.addEventListener('input', sync);
  sync();

  btn.addEventListener('click', function () {
  if (!baseUrl) return;
  var params = new URLSearchParams();
  params.set('filter.v.price.gte', parseFloat(rMin.value).toFixed(2));
  params.set('filter.v.price.lte', parseFloat(rMax.value).toFixed(2));
  window.location.href = baseUrl + '?' + params.toString();
});
});
</script>




