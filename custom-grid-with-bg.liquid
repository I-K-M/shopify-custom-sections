{% comment %}
  Section: Left 2x2 grid (50%) + right empty (50%) with background image underneath.
{% endcomment %}

{% assign sid = section.id | replace: '_', '' | downcase %}

<section class="sf-split-grid-{{ sid }}">
  <div class="sf-split-grid__bg-{{ sid }}">
    {% if section.settings.background_image != blank %}
      <img
        class="sf-split-grid__bg-img-{{ sid }}"
        src="{{ section.settings.background_image | image_url: width: 1800 }}"
        alt="{{ section.settings.background_image.alt | escape }}"
        loading="lazy"
        width="1800"
        height="1800"
      >
    {% endif %}
  </div>

  <div class="sf-split-grid__wrap-{{ sid }} page-width">
    <div class="sf-split-grid__left-{{ sid }}">
      <div class="sf-split-grid__content-{{ sid }}">
        {% if section.settings.heading != blank %}
          <h2 class="sf-split-grid__heading-{{ sid }}">{{ section.settings.heading }}</h2>
        {% endif %}

        <div class="sf-split-grid__grid-{{ sid }}">
          {% for i in (1..4) %}
            {% liquid
              assign image_key = 'item_' | append: i | append: '_image'
              assign title_key = 'item_' | append: i | append: '_title'
              assign text_key  = 'item_' | append: i | append: '_text'

              assign item_image = section.settings[image_key]
              assign item_title = section.settings[title_key]
              assign item_text  = section.settings[text_key]
            %}

            <div class="sf-split-grid__item-{{ sid }}">
              <div class="sf-split-grid__iconwrap-{{ sid }}">
                {% if item_image != blank %}
                  <img
                    class="sf-split-grid__icon-{{ sid }}"
                    src="{{ item_image | image_url: width: 200 }}"
                    alt="{{ item_image.alt | escape }}"
                    loading="lazy"
                    width="200"
                    height="200"
                  >
                {% else %}
                  <div class="sf-split-grid__iconph-{{ sid }}">
                  </div>
                {% endif %}
              </div>

              {% if item_title != blank %}
                <h3 class="sf-split-grid__title-{{ sid }}">{{ item_title }}</h3>
              {% endif %}

              {% if item_text != blank %}
                <div class="sf-split-grid__text-{{ sid }}">
                  {{ item_text }}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="sf-split-grid__right-{{ sid }}" aria-hidden="true"></div>
  </div>
</section>

<style>
  .sf-split-grid-{{ sid }}{
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: {{ section.settings.section_padding_y }}px 0;
    min-height: {{ section.settings.min_height }}px;
  }

  /* Background image under the whole section, visually on the right half */
  .sf-split-grid__bg-{{ sid }}{
    position: absolute;
    top: 0; right: 0;
    width: 50%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
  }
  .sf-split-grid__bg-img-{{ sid }}{
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center right;
    display: block;
  }

  /* 50/50 split */
  .sf-split-grid__wrap-{{ sid }}{
    position: relative;
    z-index: 1;
    display: flex;
    width: 100%;
    min-height: {{ section.settings.min_height }}px;
  }
  .sf-split-grid__left-{{ sid }},
  .sf-split-grid__right-{{ sid }}{
    width: 50%;
  }
  .sf-split-grid__right-{{ sid }}{ background: transparent; }

  /* Left column: vertically centered, full height */
  .sf-split-grid__left-{{ sid }}{
    display: flex;
    align-items: center;
  }

  /* Constrained content width */
  .sf-split-grid__content-{{ sid }}{
    width: 100%;
    max-width: {{ section.settings.content_max_width }}px;
    padding: 0 {{ section.settings.section_padding_x }}px;
  }

  .sf-split-grid__heading-{{ sid }}{
    margin: 0 0 {{ section.settings.heading_gap }}px 0;
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    line-height: 1.15;
    text-align: left;
  }

  /* Simple 2x2 grid */
  .sf-split-grid__grid-{{ sid }}{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.grid_gap }}px;
    height: 100%; /* grid should be 100% height */
    align-content: stretch;
  }

  .sf-split-grid__item-{{ sid }}{
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* aligned left */
    gap: {{ section.settings.item_gap }}px;
    min-width: 0;
  }

  /* icon wrapper 30% width and centered */
  .sf-split-grid__iconwrap-{{ sid }}{
    width: 30%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }
  .sf-split-grid__icon-{{ sid }}{
    max-height: 50px;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
  }
  .sf-split-grid__iconph-{{ sid }}{
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .sf-split-grid__iconph-{{ sid }} svg{
    width: 28px;
    height: 28px;
  }

  .sf-split-grid__title-{{ sid }}{
    margin: 0;
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.title_color }};
    line-height: 1.25;
    text-align: left;
  }
  .sf-split-grid__text-{{ sid }}{
    margin: 0;
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1.55;
    text-align: left;
  }

  /* Mobile */
  @media (max-width: 768px){
    .sf-split-grid__wrap-{{ sid }}{
      flex-direction: column;
      min-height: auto;
    }
    .sf-split-grid__left-{{ sid }},
    .sf-split-grid__right-{{ sid }}{
      width: 100%;
    }

    .sf-split-grid__bg-{{ sid }}{
      position: relative;
      width: 100%;
      height: {{ section.settings.mobile_bg_height }}px;
    }

    .sf-split-grid__left-{{ sid }}{
      align-items: stretch;
      padding-bottom: 20px;
    }

    .sf-split-grid__grid-{{ sid }}{
      grid-template-columns: 1fr;
      height: auto;
    }
  }
</style>

